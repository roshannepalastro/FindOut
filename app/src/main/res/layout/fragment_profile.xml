<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.user_profile.ProfileFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondary_gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"

            android:layout_width="match_parent"
            android:layout_height="300dp">


            <TextView

                android:id="@+id/TVName"

                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/charger"
                android:gravity="start"
                android:background="#C9CBCA "
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/cl2"
                app:layout_constraintTop_toTopOf="@id/cl2">

            </TextView>

            <TextView

                android:id="@+id/TVCollegeName"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="268dp"
                android:fontFamily="@font/charger"
                android:gravity="bottom"
                android:maxWidth="120dp"
                android:maxHeight="60dp"
                android:background="#C9CBCA "
                android:textColor="#424949"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/cl2"
                app:layout_constraintTop_toTopOf="@id/cl2">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_marginTop="140dp"
                app:cardCornerRadius="80dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/rosh">

                </ImageView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="32dp"

                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/black"
                    app:srcCompat="@android:drawable/ic_menu_add">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/TVEdit"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_marginTop="284dp"
                android:background="#74757F"
                android:fontFamily="@font/charger"
                android:gravity="center"

                android:text="@string/edit"
                android:textColor="#ffffff"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="460dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:background="@color/secondary_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_marginBottom="2dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/charger"                    android:text="@string/more_info"
                    android:textColor="@color/black"
                    android:textStyle="bold">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/address"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/TVAddress"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="#C9CBCA "
                        android:layout_marginStart="5dp"

                        android:textColor="@color/black">

                    </TextView>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/e_mail"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/TVEmail"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:background="#C9CBCA "
                        android:textColor="@color/black">

                    </TextView>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/phone_no"
                        android:textColor="@color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/TVPhone"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/charger"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:background="#C9CBCA "
                        android:textColor="@color/black">

                    </TextView>




                </LinearLayout>


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="100dp"
                android:id="@+id/RVProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>